{% extends "base.html.twig" %}

{% block navigation %}
    {% if is_granted("IS_AUTHENTICATED_FULLY") or is_granted("IS_AUTHENTICATED_REMEMBERED") %}
        {{ app.user.username }} |
        <a href="{{ path('root') }}">Dashboard</a>
        <a href="{{ path('fos_user_profile_show') }}">{{ 'layout.account'|trans({}, 'FOSUserBundle') }}</a>
        <a href="{{ path('patient_index') }}">Patients</a>
        <a href="{{ path('treatment_note_template_index') }}">Treatment note templates</a>
        <a href="{{ path('fos_user_security_logout') }}">{{ 'layout.logout'|trans({}, 'FOSUserBundle') }}</a>
    {% else %}
        <a href="{{ path('fos_user_security_login') }}">{{ 'layout.login'|trans({}, 'FOSUserBundle') }}</a>
        <a href="{{ path('fos_user_registration_register') }}">{{ 'layout.register'|trans({}, 'FOSUserBundle') }}</a>
    {% endif %}
    <hr>
{% endblock %}
