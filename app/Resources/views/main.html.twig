<!DOCTYPE html>

<html lang="{{ app.request.locale|split('_')[0] }}">
<head>

    {% set title = app_name %}
    {% if header is defined %}
        {% set title = title ~ ' - ' ~ header|trans %}
    {% endif %}
    {% if subheader is defined %}
        {% set title = title ~ ' - ' ~ subheader|trans %}
    {% endif %}
    <title>{{ title }}</title>

    <meta charset="UTF-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}"/>

    <!-- JS routing -->
    <script src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
    <script src="{{ path('fos_js_routing_js', { callback: 'fos.Router.setData' }) }}"></script>

    <!-- JS translations -->
    <script src="{{ asset('bundles/bazingajstranslation/js/translator.min.js') }}"></script>
    <script src="{{ url('bazinga_jstranslation_js') }}"></script>

    <!-- jQuery -->
    <script src="{{ asset('js/jquery-3.1.1.min.js') }}"></script>

    <!-- Bootstrap JS -->
    <script src="{{ asset('js/bootstrap.min.js') }}"></script>

    <!-- Jasny Bootstrap JS -->
    <script src="{{ asset('js/jasny-bootstrap.js') }}"></script>

    <!-- Bootstrap Lightbox JS -->
    <script src="{{ asset('js/ekko-lightbox.min.js') }}"></script>

    <!-- jQuery input mask -->
    <script src="{{ asset('js/jquery.inputmask.bundle.min.js') }}"></script>

    <!-- Bootstrap Notify -->
    <script src="{{ asset('js/bootstrap-notify.min.js') }}"></script>

    <!-- Bootstrap Confirmation -->
    <script src="{{ asset('js/bootstrap-confirmation.min.js') }}"></script>

    <!-- Password Strength Meter -->
    <script src="{{ asset('js/pwstrength-bootstrap.min.js') }}"></script>

    <!-- Select2 JS -->
    <script src="{{ asset('js/select2.full.min.js') }}"></script>

    <!-- Debounce jQuery plugin -->
    <script src="{{ asset('js/jquery.ba-throttle-debounce.min.js') }}"></script>

    <!-- Bootstrap colorpicker JS -->
    <script src="{{ asset('js/bootstrap-colorpicker.min.js') }}"></script>

    <!-- Bootstrap Typeahead JS -->
    <script src="{{ asset('js/bootstrap3-typeahead.min.js') }}"></script>

    <!-- ClinicSpace JS -->
    <script src="{{ asset('js/func.js') }}?rnd{{ random(1000000) }}"></script>

    {% block stylesheets %}{% endblock %}

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}">

    <!-- Jasny Bootstrap CSS -->
    <link rel="stylesheet" href="{{ asset('css/jasny-bootstrap.min.css') }}">

    <!-- Bootstrap Lightbox CSS -->
    <link rel="stylesheet" href="{{ asset('css/ekko-lightbox.min.css') }}">

    <!-- Animate.css -->
    <link rel="stylesheet" href="{{ asset('css/animate.css') }}">

    <!-- Select2 CSS -->
    <link rel="stylesheet" href="{{ asset('css/select2.min.css') }}">

    <!-- Bootstrap colorpicker CSS -->
    <link rel="stylesheet" href="{{ asset('css/bootstrap-colorpicker.min.css') }}">

    <!-- Font Awesome CSS -->
    <link rel="stylesheet" href="{{ asset('css/font-awesome.min.css') }}">

    <!-- ClinicSpace styles -->
    <link rel="stylesheet" href="{{ asset('css/styles.css') }}?rnd{{ random(1000000) }}"/>

    <!-- ClinicSpace styles -->
    <link rel="stylesheet" href="{{ asset('css/clinicspace.css') }}?rnd{{ random(1000000) }}"/>

    <!-- Google fonts & font awesome -->
    <link href="//fonts.googleapis.com/css?family=Open+Sans:400,600,700" rel="stylesheet">
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->

</head>

{% import "@App/macros.html.twig" as macros %}

<body>

    {% block outerBody %}

    {% endblock %}

{% block javascripts %}{% endblock %}

</body>
</html>
