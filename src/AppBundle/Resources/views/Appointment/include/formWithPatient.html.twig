<form name="{{ form.vars.name }}" method="post" class="app-appointment-form-with-patient"
      action="{{ entity.id ? path('appointment_update_with_patient',{'id':app_hash(entity)}) : path('appointment_create_with_new_patient') }}" {{ form_enctype(form) }} >
    {# form_start(form) #}

    {{ form_row(form.treatment) }}

    <section class="detail-section patient-mandatory">
        <h3>{{ 'app.patient.create_new'|trans }}</h3>
        {{ form_row(form.patient.firstName) }}
        {{ form_row(form.patient.lastName) }}
        {{ form_row(form.patient.mobilePhone) }}
        {{ form_row(form.patient.email) }}
        {{ form_row(form.patient.dateOfBirth) }}
        {{ form_row(form.patient.referrer) }}
    </section>

    {{ form_row(form.date) }}
    {{ form_row(form.start) }}
    {{ form_row(form.end) }}
    {{ form_row(form.resource) }}
    {{ form_row(form.description) }}

    <div class="app-buttons-placeholder">
        {% include "@App/Appointment/include/buttons.html.twig" %}
    </div>

    {{ form_widget(form._token) }}
    {{ form_end(form, {'render_rest': false}) }}
