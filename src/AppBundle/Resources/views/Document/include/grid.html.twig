{% extends '@App/Datagrid/datagrid.html.twig' %}

    {% block pagination %}
        <div class="app-datagrid-pagination">
            {{ knp_pagination_render(entities) }}
        </div>
    {% endblock %}

    {% block table %}

        <table class="table table-hover">
            <thead>
            <tr>
                <th>{{ 'app.attachment.label'|trans }}</th>
                <th>{{ 'app.document_category.label'|trans }}</th>
                <th>{{ 'app.attachment.file_size'|trans }}</th>
                <th>{{ 'app.date'|trans }}</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {% for entity in entities %}
                {% set lightbox = entity.isImage ? " data-toggle='lightbox' data-type='image' " : '' %}
                <tr>
                    <td>
                        <a href="{{ path('document_download', {"id":app_hash(entity)}) }}"
                           target="_blank">{{ entity.originFileName }}</a>
                    </td>
                    <td>
                        {{ entity.category|trans }}
                    </td>
                    <td>
                        {{ entity.fileSize|format_bytes }}
                    </td>
                    <td>
                        {{ entity.createdAt|app_date }}
                    </td>
                    <td>
                        <div class="position-relative">
                            <a data-href="{{ path('document_delete',{'id':app_hash(entity)}) }}"
                               class=""
                               data-toggle="delete-confirmation"
                               data-entity-label="{{ 'app.attachment.label'|trans }}"><span
                                        class="glyphicon glyphicon-remove"></span></a>
                        </div>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

    {% endblock %}
