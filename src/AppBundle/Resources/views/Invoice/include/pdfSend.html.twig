<script type="text/javascript">

    $(document).ready(function () {

        $('body').on('click', '.send-invoice-pdf', function () {

            notify('{{ 'app.invoice.message.email_pdf_sending'|trans }}', 'info');

            var invoiceId = $(this).data('id');

            var url = Routing.generate('invoice_pdf_send', {
                'id': invoiceId
            });

            var type = '';
            var message = '';

            $.post(url, {}, function (data) {
                data = $.parseJSON(data);
                if (data.error == 1) {
                    type = 'danger';
                    message = data.message;
                } else {
                    type = 'success';
                    message = data.message;
                }
                notify(message, type);
            }, "json");

            return false;
        });
    })
</script>
