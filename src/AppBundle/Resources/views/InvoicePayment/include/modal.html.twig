<div class="modal fade" id="app-modal-invoice-payment" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
                            aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">{{ 'app.invoice_payment.label'|trans }}</h4>
            </div>
            <div class="modal-body">

            </div>
            <div class="modal-footer">

            </div>
        </div>
    </div>
</div>

<script>

    $('#app-modal-invoice-payment').on('show.bs.modal', function (e) {
        render();
    });

    $('body').on('submit', 'form.app-invoice-payment-form', function (e) {
        e.preventDefault();

        var form = $(this);
        ajaxFormHandler(form, function (data) {
            if (!data.error) {
                refreshPaymentsList();
            }
        });
    });

    $('body').on('click', '.app-invoice-payment-create', function (e) {
        e.preventDefault();
        loaderShow();

        var url = Routing.generate('invoice_payment_create', {
            'id': '{{ app_hash(entity) }}'
        });

        $.get(url, {}, function (data) {
            data = $.parseJSON(data);
            if (typeof data.form !== 'undefined') {
                $('#app-modal-invoice-payment .modal-body').html(data.form);
                $('#app-modal-invoice-payment').modal('show');
                ajaxModalButtons($('#app-modal-invoice-payment'));
            }
            loaderHide();
        });
    });

    $('body').on('click', '.app-invoice-payment-remove', function (e) {

        var paymentId = $(this).data('entityId');
        var el = $(this);

        deleteConfirmationHandler(el, function () {
            loaderShow();

            var url = Routing.generate('invoice_payment_delete', {
                'id': paymentId
            });

            $.get(url, {}, function (data) {
                refreshPaymentsList();
                loaderHide();
            });
        });
    });

    function refreshPaymentsList() {
        loaderShow();

        var url = Routing.generate('invoice_view', {
            'id': '{{ app_hash(entity) }}'
        });

        window.location.href = url;
    }


</script>
