{% extends 'inner.html.twig' %}

{% block header %}
    {{ 'app.patient.plural_label'|trans }}
{% endblock %}

{% block body %}

    {% embed "buttons.html.twig" %}
        {% block buttons %}
            <a href="{{ path('patient_create') }}" class="btn btn-primary">{{ 'app.patient.new'|trans }}</a>
        {% endblock %}
    {% endembed %}

    <div class="app-list">

        {% if filter is defined %}
            {{ form_widget(filter) }}
        {% endif %}

        <div class="app-pagination">
            {{ knp_pagination_render(entities) }}
        </div>

        <table class="table table-hover table-bordered">
            <thead>
            <tr>
                <th>{{ 'app.patient.label'|trans }}</th>
                <th>{{ 'app.email'|trans }}</th>
                <th>{{ 'app.phone.label'|trans }}</th>
                <th>{{ 'app.appointment.next'|trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% for entity in entities %}
                <tr>
                    <td>
                        <a href="{{ path('patient_view', { 'id': app_hash(entity) }) }}">{{ entity }}</a>
                    </td>
                    <td>
                        {% if entity.email %}
                            <a href="mailto:{{ entity.email }}">{{ entity.email }}</a>
                        {% endif %}
                    </td>
                    <td>
                        {% if entity.phones|length > 0 %}
                            <a href="tel:{{ entity.phones[0] }}">{{ entity.phones[0] }}</a>
                        {% endif %}
                    </td>
                    <td></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    {{ parent() }}

{% endblock %}
