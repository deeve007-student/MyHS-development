{% extends 'inner.html.twig' %}

{% block header %}
    {{ 'app.patient.plural_label'|trans }}
{% endblock %}

{% block body %}

    {% embed "buttons.html.twig" %}
        {% block buttons %}
            <a href="{{ path('patient_create') }}" class="btn btn-primary">{{ 'app.patient.new'|trans }}</a>
        {% endblock %}
    {% endembed %}

    <table class="table table-hover table-bordered">
        <thead>
        <tr>
            <th>{{ 'app.patient.label'|trans }}</th>
            <th>{{ 'app.email'|trans }}</th>
            <th>{{ 'app.phone.label'|trans }}</th>
            <th>{{ 'app.appointment.next'|trans }}</th>
            <th>{{ 'app.action.plural_label'|trans }}</th>
        </tr>
        </thead>
        <tbody>
        {% for entity in patients %}
            <tr>
                <td>
                    <a href="{{ path('patient_view', { 'id': entity.id }) }}">{{ entity }}</a>
                </td>
                <td>
                    {% if entity.email %}
                        <a href="mailto:{{ entity.email }}">{{ entity.email }}</a>
                    {% endif %}
                </td>
                <td>
                    {% if entity.phones|length > 0 %}
                        <a href="tel:{{ entity.phones[0] }}">{{ entity.phones[0] }}</a>
                    {% endif %}
                </td>
                <td></td>
                <td>
                    <a href="{{ path('patient_update', { 'id': entity.id }) }}">{{ 'app.action.edit'|trans }}</a> /
                    <a href="{{ path('patient_delete', { 'id': entity.id }) }}">{{ 'app.action.delete'|trans }}</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {{ parent() }}

{% endblock %}
