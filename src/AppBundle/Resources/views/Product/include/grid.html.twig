{% extends '@App/Datagrid/datagrid.html.twig' %}

    {% block pagination %}
        <div class="app-datagrid-pagination">
            {{ knp_pagination_render(entities) }}
        </div>
    {% endblock %}

    {% block table %}
        <table class="table table-hover">
            <thead>
            <tr>
                <th>{{ 'app.product.name'|trans }}</th>
                <th>{{ 'app.product.supplier'|trans }}</th>
                <th>{{ 'app.product.stock_level'|trans }}</th>
                <th>{{ 'app.product.price'|trans }}</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {% for entity in entities %}
                <tr>
                    <td>{{ entity }}</td>
                    <td>{{ entity.supplier }}</td>
                    <td>{{ entity.stockLevel }}</td>
                    <td>{{ entity.price|price }}</td>
                    <td>
                        <div class="position-relative">
                            <a href="{{ path('product_update',{'id':app_hash(entity)}) }}"
                               class="edit-item"></a>
                            <a data-href="{{ path('product_delete',{'id':app_hash(entity)}) }}"
                               class="delete-item"
                               data-toggle="delete-confirmation"></a>
                        </div>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% endblock %}
