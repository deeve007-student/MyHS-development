{% extends 'inner.html.twig' %}

{% block header %}
    {{ 'app.product.plural_label'|trans }}
{% endblock %}

{% block body %}

    {% embed "buttons.html.twig" %}
        {% block buttons %}
            <a href="{{ path('product_create') }}" class="btn btn-primary">{{ 'app.product.new'|trans }}</a>
        {% endblock %}
    {% endembed  %}

    <table class="table table-hover table-bordered">
        <thead>
        <tr>
            <th>{{ 'app.product.label'|trans }}</th>
            <th>{{ 'app.product.price'|trans }}</th>
            <th>{{ 'app.action.plural_label'|trans }}</th>
        </tr>
        </thead>
        <tbody>
        {% for entity in products %}
            <tr>
                <td><a href="{{ path('product_view', { 'id': entity.id }) }}">{{ entity }}</a></td>
                <td>{{ entity.price|price }}</td>
                <td>
                    <a href="{{ path('product_update', { 'id': entity.id }) }}">{{ 'app.action.edit'|trans }}</a> /
                    <a href="{{ path('product_delete', { 'id': entity.id }) }}">{{ 'app.action.delete'|trans }}</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
