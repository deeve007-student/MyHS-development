{% extends 'inner.html.twig' %}
{% set header = entity.id ? entity : 'app.product.new'|trans %}

{% block body %}

    {{ form_start(form) }}

    {% embed "buttons.html.twig" %}
        {% block buttons %}
            {% set cancelPath = path('product_index') %}
            <input type="submit" value="{{ 'app.action.save'|trans }}" class="btn btn-primary"/>
            <a href="{{ cancelPath }}" class="btn btn-default">{{ 'app.action.cancel'|trans }}</a>
        {% endblock %}
    {% endembed %}

    {% embed "subheading.html.twig" %}
        {% block subheading %}
            {{ 'app.general'|trans }}
        {% endblock %}
    {% endembed %}

    {{ form_row(form.name) }}
    {{ form_row(form.code) }}
    {{ form_row(form.supplier) }}
    {{ form_row(form.price) }}
    {{ form_row(form.costPrice) }}
    {{ form_row(form.stockLevel) }}

    {% embed "subheading.html.twig" %}
        {% block subheading %}
            {{ 'app.concession.price_plural'|trans }}
        {% endblock %}
    {% endembed %}

    {{ form_widget(form.concessionPrices) }}

    {{ form_widget(form._token) }}
    {{ form_end(form, {'render_rest': false}) }}

{% endblock %}
