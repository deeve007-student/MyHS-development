{% extends '@App/Datagrid/datagrid.html.twig' %}

    {% block pagination %}
        <div class="app-datagrid-pagination">
            {{ knp_pagination_render(entities) }}
        </div>
    {% endblock %}

    {% block table %}
        {% set showPatient = entity is defined ? false : true %}

        <table class="table table-hover">
            <thead>
            <tr>
                <th>{{ 'app.recall.date'|trans }}</th>
                <th>{{ 'app.recall_type.label'|trans }}</th>
                <th class="text-right">{{ 'app.recall_for.label'|trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% for entity in entities %}
                <tr>
                    <td><a href="#" class="app-patient-recall-edit" data-entity-id="{{ app_hash(entity) }}">{{ entity.date|app_date }}</a></td>
                    <td>{{ entity.recallType }}</td>
                    <td>{{ entity.recallFor ? entity.recallFor : entity.text }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

    {% endblock %}
