<div class="modal fade" id="app-modal-patient-recall" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
                            aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">{{ 'app.recall.label'|trans }}</h4>
            </div>
            <div class="modal-body">

            </div>
            <div class="modal-footer">

            </div>
        </div>
    </div>
</div>

<script>

    $('body').on('submit', 'form.app-patient-recall-form', function (e) {
        e.preventDefault();

        var form = $(this);
        ajaxFormHandler(form, function (data) {
            if (!data.error) {
                if (typeof refreshRecallWidget === 'function') {
                    refreshRecallWidget();
                } else {
                    if (typeof refreshRecallList === 'function') {
                        refreshRecallList();
                    }
                }
            }
        });
    });

    {% if patient is defined or entity is defined %}

    $('body').on('click', '.app-patient-recall-create', function (e) {
        e.preventDefault();
        loaderShow();

        var url = Routing.generate('patient_recall_create', {
            'patient': '{{ app_hash(patient is defined ? patient : (entity.patient is defined ? entity.patient : entity)) }}'
        });

        $.get(url, {}, function (data) {
            data = $.parseJSON(data);
            if (typeof data.form !== 'undefined') {
                $('#app-modal-patient-recall .modal-body').html(data.form);
                $('#app-modal-patient-recall').modal('show');
                ajaxModalButtons($('#app-modal-patient-recall'));
                render();
            }
            loaderHide();
        });
    });

    {% endif %}

    $('body').on('click', '.app-patient-recall-edit', function (e) {
        e.preventDefault();
        loaderShow();

        var recallId = $(this).data('entityId');

        var url = Routing.generate('recall_update', {
            'id': recallId
        });

        $.get(url, {}, function (data) {
            data = $.parseJSON(data);
            if (typeof data.form !== 'undefined') {
                $('#app-modal-patient-recall .modal-body').html(data.form);
                $('#app-modal-patient-recall').modal('show');
                ajaxModalButtons($('#app-modal-patient-recall'));
                render();
            }
            loaderHide();
        });
    });

    $('body').on('click', '.app-patient-recall-remove', function (e) {

        var recallId = $(this).data('entityId');
        var el = $(this);

        deleteConfirmationHandler(el, function () {
            loaderShow();

            var url = Routing.generate('recall_delete', {
                'id': recallId
            });

            $.get(url, {}, function (data) {
                refreshAlertList();
                loaderHide();
                notify('app.patient_recall.message.deleted', 'success');
            });
        });
    });

    function refreshRecallList() {
        window.location.reload();
    }


</script>
