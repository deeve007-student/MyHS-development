{% import '@App/macros.html.twig' as macros %}

<form name="{{ form.vars.name }}" method="post" class="app-refund-invoice-form"
      action="{{ path('refund_invoice_create',{'invoice': app_hash(entity.invoice)}) }}" {{ form_enctype(form) }} >
    {# form_start(form) #}

    {# macros.horizontalRow(form.items) #}

    <table class="table"  id="refundItems" data-prototype="{{ form_widget(form.items.vars.prototype)|e }}">
        <tr>
            <th class="text-nowrap">{{ 'app.invoice_payment_method.label'|trans }}</th>
            <th class="text-nowrap">{{ 'app.refund.paid'|trans }}</th>
            <th class="text-nowrap">{{ 'app.refund.amount'|trans }}</th>
        </tr>
        {% include "@App/Refund/invoiceRefundItems.twig" %}
        <tr>
            <td colspan="3">
                <a href="#" id="add-item" class="btn btn-default">{{ 'app.refund.add'|trans }}</a>
            </td>
        </tr>
        <tr>
            <td colspan="2">{{ 'app.refund.payment_total'|trans }}</td>
            <td>
                {{ form_row(form.paymentsTotal,{'attr':{'style':'width:130px;'}}) }}
            </td>
        </tr>
    </table>


    <div class="app-buttons-placeholder">
        {% include "@App/Refund/include/buttons.html.twig" %}
    </div>

    {{ form_widget(form._token) }}
    {{ form_end(form, {'render_rest': false}) }}
