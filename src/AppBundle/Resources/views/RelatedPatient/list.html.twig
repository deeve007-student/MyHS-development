{% if entity.relatedPatients|length > 0 %}
    <ul>
        {% for relatedPatient in entity.relatedPatients %}
            <li>
                {{ relatedPatient.patientRelationship }}:
                <a href="{{ path('patient_view', {'id':app_hash(relatedPatient.patient)}) }}">{{ relatedPatient.patient }}</a>
            </li>
        {% endfor %}
    </ul>
{% endif %}
