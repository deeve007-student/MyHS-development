{% extends '@App/Datagrid/datagrid.html.twig' %}

    {% block pagination %}
        <div class="app-datagrid-pagination">
            {{ knp_pagination_render(entities) }}
        </div>
    {% endblock %}

    {% block table %}
            <table class="table table-hover table-bordered">
                <thead>
                <tr>
                    <th>{{ 'app.treatment.label'|trans }}</th>
                    <th>{{ 'app.treatment.price'|trans }}</th>
                    <th>{{ 'app.action.plural_label'|trans }}</th>
                </tr>
                </thead>
                <tbody>
                {% for entity in entities %}
                    <tr>
                        <td>{{ entity }}</td>
                        <td>{{ entity.price|price }}</td>
                        <td>
                            <a href="{{ path('treatment_update',{'id':app_hash(entity)}) }}"
                               class="btn btn-default btn-sm">{{ 'app.treatment.edit'|trans }}</a>
                            <a data-href="{{ path('treatment_delete',{'id':app_hash(entity)}) }}"
                               class="btn btn-default btn-sm"
                               data-toggle="delete-confirmation">{{ 'app.treatment.delete'|trans }}</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
    {% endblock %}
