{% extends '@App/Datagrid/datagrid.html.twig' %}

    {% block pagination %}
        <div class="app-datagrid-pagination">
            {{ knp_pagination_render(entities) }}
        </div>
    {% endblock %}

    {% block table %}
<table class="table table-hover">
    <thead>
    <tr>
        <th>{{ 'app.treatment.label'|trans }}</th>
        <th>{{ 'app.treatment.price'|trans }}</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
    <tr>
        <td>{{ entity }}</td>
        <td>{{ entity.price|price }}</td>
        <td>
            <div class="position-relative">
                <a href="{{ path('treatment_update',{'id':app_hash(entity)}) }}"
                   class="edit-item"></a>
                {% if entity.invoiceTreatments|length == 0 %}
                <a data-href="{{ path('treatment_delete',{'id':app_hash(entity)}) }}"
                   class="delete-item"
                   data-toggle="delete-confirmation"
                   data-entity-label="{{ 'app.treatment.label'|trans }}"></a>
                {% endi %}
            </div>
        </td>
    </tr>
    {% endfor %}
    </tbody>
</table>
{% endblock %}
