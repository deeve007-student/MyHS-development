{% extends 'inner.html.twig' %}

{% block header %}
    {{ 'app.treatment.plural_label'|trans }}
{% endblock %}

{% block body %}

    {% embed "buttons.html.twig" %}
        {% block buttons %}
            <a href="{{ path('treatment_create') }}" class="btn btn-primary">{{ 'app.treatment.new'|trans }}</a>
        {% endblock %}
    {% endembed %}

    <table class="table table-hover table-bordered">
        <thead>
        <tr>
            <th>{{ 'app.treatment.label'|trans }}</th>
            <th>{{ 'app.treatment.price'|trans }}</th>
            <th>{{ 'app.action.plural_label'|trans }}</th>
        </tr>
        </thead>
        <tbody>
        {% for entity in treatments %}
            <tr>
                <td>{{ entity }}</td>
                <td>{{ entity.price|price }}</td>
                <td>
                    <a href="{{ path('treatment_update',{'id':entity.id}) }}"
                       class="btn btn-default btn-sm">{{ 'app.treatment.edit'|trans }}</a>
                    <a data-href="{{ path('treatment_delete',{'id':entity.id}) }}"
                       class="btn btn-default btn-sm" data-toggle="delete-confirmation">{{ 'app.treatment.delete'|trans }}</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
