{% extends '@App/Datagrid/datagrid.html.twig' %}

    {% block pagination %}
        <div class="app-datagrid-pagination">
            {{ knp_pagination_render(entities) }}
        </div>
    {% endblock %}

    {% block table %}
        <table class="table table-hover">
            <thead>
            <tr>
                <th>{{ 'app.treatment_note_template.label'|trans }}</th>
                <th>{{ 'app.treatment_note_template.fields'|trans }}</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {% for entity in entities %}
                <tr>
                    <td>{{ entity }}</td>
                    <td>
                        {% if entity.treatmentNoteFields|length > 0 %}
                            {% for field in entity.treatmentNoteFields %}
                                <div>{{ field }}</div>
                            {% endfor %}
                        {% endif %}
                    </td>
                    <td>
                        <a href="{{ path('treatment_note_template_update',{'id':app_hash(entity)}) }}"
                           class="edit-item"></a>
                        {% if not entity.default %}
                            <a data-href="{{ path('treatment_note_template_delete',{'id':app_hash(entity)}) }}"
                               class="delete-item"
                               data-toggle="delete-confirmation"></a>
                        {% endif %}
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% endblock %}
