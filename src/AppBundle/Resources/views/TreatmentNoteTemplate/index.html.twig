{% extends 'inner.html.twig' %}
{% set header = 'app.treatment_note_template.plural_label'|trans %}

{% block body %}

    {% embed "buttons.html.twig" %}
        {% block buttons %}
            <a href="{{ path('treatment_note_template_create') }}"
               class="btn btn-primary">{{ 'app.treatment_note_template.new'|trans }}</a>
        {% endblock %}
    {% endembed %}

    <div class="app-datagrid">
        <div class="app-datagrid-pagination">
            {{ knp_pagination_render(entities) }}
        </div>

        <table class="table table-hover table-bordered">
            <thead>
            <tr>
                <th>{{ 'app.treatment_note_template.name'|trans }}</th>
            </tr>
            </thead>

            <tbody>
            {% for entity in entities %}
                <tr>
                    <td><a href="{{ path('treatment_note_template_view', { 'id': app_hash(entity) }) }}">{{ entity }}</a></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}
