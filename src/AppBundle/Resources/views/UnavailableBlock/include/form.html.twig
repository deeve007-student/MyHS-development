{% import '@App/macros.html.twig' as macros %}

<p>Create a block of time when you will be unavailable for appointments</p>

<form name="{{ form.vars.name }}" method="post" class="app-unavailable-block-form"
      action="{{ entity.id ? path('unavailable_block_update',{'id':app_hash(entity)}) : path('unavailable_block_create') }}" {{ form_enctype(form) }} >
    {# form_start(form) #}

    {{ macros.horizontalRow(form.date) }}

    {{ macros.horizontalRow(form.recurrency.type) }}

    {{ include('@App/Event/include/dates.html.twig') }}

    {{ macros.horizontalRow(form.resource) }}

    {% if entity.id %}
        {{ macros.horizontalRow(form.affect) }}
    {% endif %}

    <div class="display-none">
        {{ macros.horizontalRow(form.isMirror) }}
    </div>

    <div class="app-buttons-placeholder">
        {% include "@App/UnavailableBlock/include/buttons.html.twig" %}
    </div>

    {% include "@App/RecurrencyEvent/commonFields.html.twig" %}
    {{ form_widget(form._token) }}
    {{ form_end(form, {'render_rest': false}) }}
