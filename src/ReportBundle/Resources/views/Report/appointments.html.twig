{% extends '@Report/report.html.twig' %}

{% set pageTitle = 'app.report.appointments.label'|trans %}

{% block reportData %}

    {% if data and data.getChildren|length > 0 %}
        {% set report %}

            <table class="table table-bordered crm-table-fixed table-hover" width="100%">
                <thead>
                <tr>
                    <th>
                        {{ 'app.date'|trans }}
                    </th>
                    <th>
                        {{ 'app.appointment.start'|trans }}
                    </th>
                    <th>
                        {{ 'app.treatment.duration'|trans }}
                    </th>
                    <th>
                        {{ 'app.patient.label'|trans }}
                    </th>
                    <th>
                        {{ 'app.treatment.label'|trans }}
                    </th>
                    <th>
                        {{ 'app.patient.mobile_phone'|trans }}
                    </th>
                    <th>
                        {{ 'app.email'|trans }}
                    </th>
                    {% if form.firstAppointment.vars.data == true %}
                        <th>
                            {{ 'app.patient.referrer'|trans }}
                        </th>
                    {% endif %}
                </tr>
                </thead>

                <tbody>
                {{ _self.renderRows(data.getChildren, form) }}
                </tbody>
            </table>

        {% endset %}
    {% endif %}

    {{ report }}

{% endblock %}

{% macro renderRows(data, form) %}
    {% import '@Report/macros.html.twig' as crmReport %}

    {% for node in data %}

        <tr {{ crmReport.reportRowAttributes(node) }}>

            <td class="nowrap">
                <div {{ crmReport.reportPadding(node.level) }}>
                    {% set nodeName = (node.name ? node.name : 'N/A')|trans %}

                    {% if node.hasChildren %}
                        <a href="#" {{ crmReport.reportLinkAtributes(node) }} >{{ nodeName }}</a>
                    {% else %}
                        {{ nodeName }}
                    {% endif %}

                    {% if node.route %}
                        <a href="{{ node.route }}" target="_blank"><i class="icon-link"></i></a>
                    {% endif %}
                </div>
            </td>

            {{ _self.renderValues(node, nodeName, form) }}

        </tr>

        {% if node.hasChildren %}
            {{ _self.renderRows(node.getChildren, form) }}
        {% endif %}

    {% endfor %}
{% endmacro %}

{% macro renderValues(node, nodeName, form) %}

    {% set gray1 = '#F8F9F9' %}
    {% set gray2 = '#F2F3F4' %}
    {% set gray3 = '#E5E7E9' %}
    {% set gray4 = '#D7DBDD' %}

    {#
    {% set fontWeight = node.level == 1 ? 'bold' : 'normal' %}
    #}

    {% set fontWeight = 'normal' %}

    <td style="font-weight: {{ fontWeight }};">
        <div class="nowrap text-left">
            {{ node.object.start|app_time }}
        </div>
    </td>

    <td style="font-weight: {{ fontWeight }};">
        <div class="nowrap text-left">
            {{ node.object.durationInMinutes }} {{ 'app.event.minutes'|trans }}
        </div>
    </td>

    <td style="font-weight: {{ fontWeight }};">
        <div class="nowrap text-left">
            <a href="{{ path('patient_view', {'id':app_hash(node.object.patient)}) }}">{{ node.object.patient }}</a>
        </div>
    </td>

    <td style="font-weight: {{ fontWeight }};">
        <div class="nowrap text-left">
            {{ node.object.treatment }}
        </div>
    </td>

    <td style="font-weight: {{ fontWeight }};">
        <div class="nowrap text-left">
            {{ node.object.patient.mobilePhone }}
        </div>
    </td>

    <td style="font-weight: {{ fontWeight }};">
        <div class="nowrap text-left">
            {{ node.object.patient.email }}
        </div>
    </td>

    {% if form.firstAppointment.vars.data == true %}
        <td style="font-weight: {{ fontWeight }};">
            <div class="nowrap text-left">
                {{ node.object.patient.referrer }}
            </div>
        </td>
    {% endif %}
{% endmacro %}
