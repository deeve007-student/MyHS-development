{% extends '@Report/report.html.twig' %}

{% set subheader = 'app.report.revenue.label' %}

{% block reportData %}

    {% if data and data.getChildren|length > 0 %}

        {% set showNonPaidCol = false %}
        {% if data.getNonAssignedPaid > 0 %}
            {% set showNonPaidCol = true %}
        {% endif %}

        {% set report %}

            <table class="table table-bordered crm-table-fixed table-hover" width="100%">
                <thead>
                <tr>
                    <th>
                        {{ 'app.task.month'|trans }}
                    </th>
                    <th>
                        {{ 'app.report.revenue.services_billed'|trans }}
                    </th>
                    <th>
                        {{ 'app.report.revenue.products_billed'|trans }}
                    </th>
                    <th>
                        {{ 'app.report.revenue.clients_billed'|trans }}
                    </th>
                    <th>
                        {{ 'app.report.revenue.services_paid'|trans }}
                    </th>
                    <th>
                        {{ 'app.report.revenue.products_paid'|trans }}
                    </th>
                    {% if showNonPaidCol %}
                        <th>
                            {{ 'app.report.revenue.non_assigned_paid'|trans }}
                        </th>
                    {% endif %}
                    <th>
                        {{ 'app.report.revenue.label'|trans }}
                    </th>
                </tr>
                </thead>

                <tbody>
                {{ _self.renderRows(data.getChildren, form, showNonPaidCol) }}
                </tbody>
            </table>

        {% endset %}
    {% endif %}

    {{ report }}

    <script>
        $(document).ready(function () {

        });
    </script>

{% endblock %}

{% macro renderRows(data, form, showNonPaidCol) %}
    {% import '@Report/macros.html.twig' as crmReport %}

    {% for node in data %}

        <tr {{ crmReport.reportRowAttributes(node) }}>

            <td class="nowrap">
                <div {{ crmReport.reportPadding(node.level) }}>
                    {% set nodeName = (node.name ? node.name : 'N/A')|trans %}

                    {% if node.hasChildren %}
                        <a href="#" {{ crmReport.reportLinkAtributes(node) }} >{{ nodeName }}</a>
                    {% else %}
                        {{ nodeName }}
                    {% endif %}

                    {% if node.route %}
                        <a href="{{ node.route }}" target="_blank"><span class="glyphicon glyphicon-link"></span></a>
                    {% endif %}
                </div>
            </td>

            {{ _self.renderValues(node, nodeName, form, showNonPaidCol) }}

        </tr>

        {% if node.hasChildren %}
            {{ _self.renderRows(node.getChildren, form, showNonPaidCol) }}
        {% endif %}

    {% endfor %}
{% endmacro %}

{% macro renderValues(node, nodeName, form, showNonPaidCol) %}

    {% set gray1 = '#F8F9F9' %}
    {% set gray2 = '#F2F3F4' %}
    {% set gray3 = '#E5E7E9' %}
    {% set gray4 = '#D7DBDD' %}

    {#
    {% set fontWeight = node.level == 1 ? 'bold' : 'normal' %}
    #}

    {% set fontWeight = 'normal' %}

    <td style="font-weight: {{ fontWeight }};">
        <div class="nowrap text-left">
            {{ node.servicesBilled|price }}
        </div>
    </td>

    <td style="font-weight: {{ fontWeight }};">
        <div class="nowrap text-left">
            {{ node.productsBilled|price }}
        </div>
    </td>

    <td style="font-weight: {{ fontWeight }};">
        <div class="nowrap text-left">
            {{ node.clients|length }}
        </div>
    </td>

    <td style="font-weight: {{ fontWeight }};">
        <div class="nowrap text-left">
            {{ node.servicesPaid|price }}
        </div>
    </td>

    <td style="font-weight: {{ fontWeight }};">
        <div class="nowrap text-left">
            {{ node.productsPaid|price }}
        </div>
    </td>

    {% if showNonPaidCol %}
        <td style="font-weight: {{ fontWeight }};">
            <div class="nowrap text-left">
                {{ node.nonAssignedPaid|price }}
            </div>
        </td>
    {% endif %}

    <td style="font-weight: {{ fontWeight }};">
        <div class="nowrap text-left">
            {{ node.revenue|price }}
        </div>
    </td>

{% endmacro %}
