{% extends "base.html.twig" %}

{% block header %}{{ 'app.user.prepare'|trans }}{% endblock %}

{% block body %}

    <p>{{ 'registration.confirmed'|trans() }}</p>

    {{ form_start(form) }}

    {{ form_row(form.title) }}
    {{ form_row(form.firstName) }}
    {{ form_row(form.lastName) }}
    <div class="hidden">
        {{ form_row(form.country) }}
    </div>
    {{ form_row(form.timezone) }}
    {{ form_row(form.agree) }}

    <div class="form-group">
        <div class="col-sm-2"></div>
        <div class="col-sm-10"><input type="submit" class="btn btn-primary"
                                      value="{{ 'app.user.save_and_proceed'|trans }}"/></div>
    </div>


    {{ form_widget(form._token) }}
    {{ form_end(form, {'render_rest': false}) }}

{% endblock %}
