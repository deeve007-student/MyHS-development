{% extends "base.html.twig" %}
{% set header = 'app.user.prepare'|trans %}

{% block body %}

    <div>
    {{ macros.row('', 'registration.confirmed'|trans) }}
    </div>

    {{ form_start(form) }}

    {{ form_row(form.title) }}
    {{ form_row(form.firstName) }}
    {{ form_row(form.lastName) }}
    <div class="hidden">
        {{ form_row(form.country) }}
        {{ form_row(form.firstLogin) }}
    </div>
    {{ form_row(form.timezone) }}
    {{ form_row(form.agree) }}

    <div class="form-group">
        <div class="col-sm-2"></div>
        <div class="col-sm-10"><input type="submit" class="btn btn-primary"
                                      value="{{ 'app.user.save_and_proceed'|trans }}"/></div>
    </div>


    {{ form_widget(form._token) }}
    {{ form_end(form, {'render_rest': false}) }}

{% endblock %}
